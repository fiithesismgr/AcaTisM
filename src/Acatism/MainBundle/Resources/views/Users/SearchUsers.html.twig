{# src/Acatism/MainBundle/Users/SearchUsers.html.twig #}

{% extends 'AcatismMainBundle:Show:MainView.html.twig' %}

{% block stylesheets %}

    <link href="{{ asset('css/maincss.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/userlists.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block title %}

    Profs Search Results

{% endblock %}

    {% block utilities %}

        <div class="howdyandtools">

                <div class="profilename"><a href="{{ path('acatism_view_student',{'username' : app.user.username}) }}">{{ app.user.firstname ~ " " ~ app.user.lastname }}</a></div>

                <div class="profilecaption">
                    <a href="{{ path('acatism_view_student',{'username' : app.user.username}) }}">
                        <img src="{{ student.getProfilePath() | apply_filter('small_thumb') }}" alt="{{app.user.firstname ~ " " ~ app.user.lastname}}" />
                    </a>

                <div class="tool">
                    <a href="{{ path('acatism_profile_settings') }}">
                        <img width="28px" height="28px" src="{{ asset('images/settings.png') }}" alt="Settings" />
                    </a>
                    <a href="{{ path('logout') }}">
                        <img width="28px" height="28px" src="{{ asset('images/logout.png') }}" alt="LogOut" />
                    </a>
                 </div>

        </div>

    {% endblock %}

    {% block pageContent %}

        <div id="userListSection">

            <div class="userListSectionHeader">

                Search Results - Academic Staff

            </div>

            <div class="userListSectionMain">

                <ul class="userList">


                    {% for prof in proflist %}


                        <li class="user">

                            <div class="userPicture">

                                <a href="{{ path('acatism_view_prof', {'username': prof.user.username }) }}">
                                    <img src="{{ prof.getProfilePath() | apply_filter('medium_thumb') }}" alt="{{ prof.user.lastname ~ ' ' ~ prof.user.firstname }}" />
                                </a>

                            </div>

                            <div class="userInfo">

                                <div class="userName">


                                    <a href="{{ path('acatism_view_prof', {'username': prof.user.username }) }}">
                                        {{ prof.user.lastname ~ ' ' ~ prof.user.firstname }}
                                    </a>

                                </div>

                                <div class="userTitle">

                                    {{ prof.title }}

                                </div>

                            </div>

                            <div class="clear"></div>

                        </li>


                    {% endfor %}


                </ul>



            </div>

            <div class="clear"></div>


        </div>

    {% endblock %}

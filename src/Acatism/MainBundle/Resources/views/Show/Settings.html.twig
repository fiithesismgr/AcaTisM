{# src/Acatism/AuthenticationBundle/Resources/views/Security/register.html.twig #}

{% extends 'AcatismMainBundle:Show:MainView.html.twig' %}

{% block stylesheets %}

    <link href="{{ asset('css/maincss.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/usersettings.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block title %}

    Profile Settings

{% endblock %}

{% form_theme form _self %}

{% block url_widget %}
    <div class="inputClass">
        {% set type = type|default('url') %}
        {{ block('form_widget_simple') }}
    </div>
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="errorSection">
                    <div class="icon">
                        <img src="{{ asset('images/form_error.png') }}" alt="Error" />
                    </div>
                    <div class="message">
                        {{ error.message }}
                    </div>

                    <div class="clear"></div>

                </div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}


    {% block utilities %}

        <div class="howdyandtools">

            {% if app.user.role.role == 'ROLE_STUDENT' %}

                <div class="profilename"><a href="{{ path('acatism_view_student',{'username' : app.user.username}) }}">{{ app.user.firstname ~ " " ~ app.user.lastname }}</a></div>

                <div class="profilecaption">
                    <a href="{{ path('acatism_view_student',{'username' : app.user.username}) }}">
                        <img src="{{ visitor.getProfilePath() | apply_filter('small_thumb') }}" alt="{{app.user.firstname ~ " " ~ app.user.lastname}}" />
                    </a>
                </div>

            {% endif %}

            {% if app.user.role.role == 'ROLE_PROFESSOR' %}

                <div class="profilename"><a href="{{ path('acatism_view_prof',{'username' : app.user.username}) }}">{{ app.user.firstname ~ " " ~ app.user.lastname }}</a></div>

                <div class="profilecaption">
                    <a href="{{ path('acatism_view_prof',{'username' : app.user.username}) }}">
                        <img src="{{ visitor.getProfilePath() | apply_filter('small_thumb') }}" alt="{{app.user.firstname ~ " " ~ app.user.lastname}}" />
                    </a>
                </div>

            {% endif %}

            <div class="tool">
                <a href="{{ path('acatism_profile_settings') }}">
                    <img width="28px" height="28px" src="{{ asset('images/settings.png') }}" alt="Settings" />
                </a>
                <a href="{{ path('logout') }}">
                    <img width="28px" height="28px" src="{{ asset('images/logout.png') }}" alt="LogOut" />
                </a>
            </div>

        </div>

    {% endblock %}

    {% block pageContent %}

        <div id="settingsListSection">

            <div class="header">

                <h1>Settings</h1>

            </div>

            <div class="main">

                <div class="settingsSection">

                    <div class="sectionHeader">

                            <h2>Social Media</h2>

                    </div>


                    <div class="sectionContent">

                        {{  form_start(form) }}

                        {{  form_errors(form) }}
                        {{  form_errors(form.facebook) }}
                        {{  form_errors(form.googleplus) }}
                        {{  form_errors(form.twitter) }}
                        {{  form_errors(form.skype) }}
                        {{  form_errors(form.dropbox) }}
                        {{  form_errors(form.github) }}

                        {{ form_start(form) }}

                        {{ form_widget(form.facebook, { 'attr': { 'class': 'normalInput', 'placeholder': 'Facebook' } }) }}

                        {{ form_widget(form.googleplus, { 'attr': { 'class': 'normalInput', 'placeholder': 'Google Plus' } }) }}

                        {{ form_widget(form.twitter, { 'attr': { 'class': 'normalInput', 'placeholder': 'Twitter' } }) }}

                        {{ form_widget(form.skype, { 'attr': { 'class': 'normalInput', 'placeholder': 'Skype' } }) }}

                        {{ form_widget(form.dropbox, { 'attr': { 'class': 'normalInput', 'placeholder': 'Dropbox' } }) }}

                        {{ form_widget(form.github, { 'attr': { 'class': 'normalInput', 'placeholder': 'Github' } }) }}

                        <div class="clear"></div>

                        <div class="actionGroup">

                            <div class="inputClassButton">
                                {{ form_widget(form.update) }}
                            </div>

                            <div class="clear"></div>


                        </div>

                        {{ form_end(form) }}

                    </div>


                </div>

                <div class="settingsSection">

                    <div class="sectionHeader">

                            <h2>Password Reset</h2>

                    </div>


                    <div class="sectionContent">

                            Content for password resetion

                    </div>


                </div>

            </div>

            <div class="clear"></div>


        </div>

    {% endblock %}

